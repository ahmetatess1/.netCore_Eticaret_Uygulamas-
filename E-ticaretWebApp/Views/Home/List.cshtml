@using E_ticaret.DataAccess;
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Ürün Listesi";
}

<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Hello, world!</title>
</head>
<body>

    <div class="container pb-5">
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("GetCategories")
            </div>

            <div class="col-md-9">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                        Bu Kategoride Bir Ürün Bulunamadı.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                        <strong>@Model.Count() Adet </strong> Ürün Bulundu.
                    </div>
                }

                @await Html.PartialAsync("_ProductList", Model)
            </div>
        </div>
    </div>

    <script src="~/lib/holder/holder.min.js" type="text/javascript"></script>

</body>
</html>
